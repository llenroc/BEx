<?xml version="1.0" encoding="utf-8" ?>
<Bitstamp>
  <BaseURL>https://www.bitstamp.net/api/</BaseURL>
  <SupportedPairs>
    <Pair>
      <Base>BTC</Base>
      <Counter>USD</Counter>
    </Pair>
  </SupportedPairs>
  <Commands>
    <Command ID="Tick">
      <Method>GET</Method>
      <RelativeURL>ticker/</RelativeURL>
      <RequiresAuthentication>false</RequiresAuthentication>
      <args />
    </Command>
    <Command ID="OrderBook">
      <Method>GET</Method>
      <RelativeURL>order_book/</RelativeURL>
      <RequiresAuthentication>false</RequiresAuthentication>
      <args />
    </Command>
    <Command ID="Transactions">
      <Method>GET</Method>
      <RelativeURL>transactions/</RelativeURL>
      <RequiresAuthentication>false</RequiresAuthentication>
      <args>
        <arg ID="time" type="parameter">hour</arg>
      </args>
    </Command>
  </Commands>
</Bitstamp>
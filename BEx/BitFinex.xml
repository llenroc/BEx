<?xml version="1.0" encoding="utf-8" ?>
<BTCe>
  <BaseURL>https://api.bitfinex.com</BaseURL>
  <SupportedPairs>
    <Pair>
      <Base>BTC</Base>
      <Counter>USD</Counter>
    </Pair>
    <Pair>
      <Base>LTC</Base>
      <Counter>USD</Counter>
    </Pair>
    <Pair>
      <Base>LTC</Base>
      <Counter>BTC</Counter>
    </Pair>
    <Pair>
      <Base>DRK</Base>
      <Counter>USD</Counter>
    </Pair>
    <Pair>
      <Base>DRK</Base>
      <Counter>BTC</Counter>
    </Pair>    
  </SupportedPairs>
  <Commands>
    <Command ID="Tick">
      <Method>GET</Method>
      <RelativeURL>/v1/pubticker/{BaseCurrency}{CounterCurrency}</RelativeURL>
      <RequiresAuthentication>false</RequiresAuthentication>
      <args>
        <arg ID="base">BTC</arg>
        <arg ID="counter">USD</arg>
      </args>
    </Command>
    <Command ID="OrderBook">
      <Method>GET</Method>
      <RelativeURL>/v1/book/{BaseCurrency}{CounterCurrency}</RelativeURL>
      <RequiresAuthentication>false</RequiresAuthentication>
      <args>
        <arg ID="base">BTC</arg>
        <arg ID="counter">USD</arg>
      </args>
    </Command>
    <Command ID="Transactions">
      <Method>GET</Method>
      <RelativeURL>/v1/trades/{BaseCurrency}{CounterCurrency}</RelativeURL>
      <RequiresAuthentication>false</RequiresAuthentication>
      <args>
        <arg ID="base">BTC</arg>
        <arg ID="counter">USD</arg>
      </args>
    </Command>
    <Command ID="AccountBalance">
      <Method>POST</Method>
      <RelativeURL>/v1/balances</RelativeURL>
      <RequiresAuthentication>true</RequiresAuthentication>
      <args />
    </Command>
    <command ID="DepositAddress">
      <Method>POST</Method>
      <RelativeURL>/v1/deposit/new</RelativeURL>
      <RequiresAuthentication>true</RequiresAuthentication>
      <args>
        <arg ID="currency">BTC</arg>
        <arg ID="method">bitcoin</arg>
        <arg ID="wallet_name">exchange</arg>
      </args>
    </command>
    <command ID="UserTransactions">
      <Method>POST</Method>
      <RelativeURL>/v1/mytrades</RelativeURL>
      <RequiresAuthentication>true</RequiresAuthentication>
      <args>
        <arg ID="symbol">BTCUSD</arg>
      </args>
    </command>
    <command ID="BuyOrder">
      <Method>POST</Method>
      <RelativeURL>/v1/order/new</RelativeURL>
      <RequiresAuthentication>true</RequiresAuthentication>
      <args>
        <arg ID="symbol">BTCUSD</arg>
        <arg ID="amount"></arg>
        <arg ID="price"></arg>
        <arg ID="exchange">bitfinex</arg>
        <arg ID="side">buy</arg>
        <arg ID="type">exchange limit</arg>
        <arg ID="is_hidden">false</arg>
      </args>
    </command>
    <command ID="SellOrder">
      <Method>POST</Method>
      <RelativeURL>/v1/order/new</RelativeURL>
      <RequiresAuthentication>true</RequiresAuthentication>
      <args>
        <arg ID="symbol">BTCUSD</arg>
        <arg ID="amount"></arg>
        <arg ID="price"></arg>
        <arg ID="exchange">bitfinex</arg>
        <arg ID="side">sell</arg>
        <arg ID="type">exchange limit</arg>
        <arg ID="is_hidden">false</arg>
      </args>
    </command>
    <command ID="OpenOrders">
      <Method>POST</Method>
      <RelativeURL>/v1/orders</RelativeURL>
      <RequiresAuthentication>true</RequiresAuthentication>
      <args></args>
    </command>
  </Commands>
</BTCe>
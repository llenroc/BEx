  <Commands>
    <Command ID="Tick">
      <Method>GET</Method>
      <RelativeURL>{BaseCurrency}_{CounterCurrency}/ticker</RelativeURL>
      <RequiresAuthentication>false</RequiresAuthentication>
      <args />
    </Command>
    <Command ID="OrderBook">
      <Method>GET</Method>
      <RelativeURL>{BaseCurrency}_{CounterCurrency}/depth</RelativeURL>
      <RequiresAuthentication>false</RequiresAuthentication>
      <args>
        <arg ID="base">BTC</arg>
        <arg ID="counter">USD</arg>
      </args>
    </Command>
    <Command ID="Transactions">
      <Method>GET</Method>
      <RequiresAuthentication>false</RequiresAuthentication>
      <RelativeURL>{BaseCurrency}_{CounterCurrency}/trades</RelativeURL>
      <args>
        <arg ID="base">BTC</arg>
        <arg ID="counter">USD</arg>
        <arg ID="since" type="parameter"></arg>
      </args>
    </Command>
    <Command ID="AccountBalance">
      <Method>POST</Method>
      <RelativeURL>getInfo/</RelativeURL>
      <RequiresAuthentication>true</RequiresAuthentication>
      <args>
        <arg ID="method" type="parameter">getInfo</arg>
      </args>
    </Command>
    <Command ID="BuyOrder">
      <Method>POST</Method>
      <RelativeURL>buy/</RelativeURL>
      <RequiresAuthentication>true</RequiresAuthentication>
      <args>
        <arg ID="pair" type="parameter" />
        <arg ID="type" type="parameter">buy</arg>
        <arg ID="rate" type="parameter" />
        <arg ID="amount" type="parameter" />
        <arg ID="method" type="parameter">Trade</arg>
      </args>
    </Command>
    <Command ID="SellOrder">
      <Method>POST</Method>
      <RelativeURL>buy/</RelativeURL>
      <RequiresAuthentication>true</RequiresAuthentication>
      <args>
        <arg ID="pair" type="parameter" />
        <arg ID="type" type="parameter" />
        <arg ID="rate" type="parameter" />
        <arg ID="amount" type="parameter" />
        <arg ID="method" type="parameter">Trade</arg>
      </args>
    </Command>
  </Commands>
